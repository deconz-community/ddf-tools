  "scripts": {
    "build:hooks": "rollup -c",
    "dev": "concurrently -k -p \"[{name}]\" -n \"db,hooks\" -c \"yellow.bold,cyan.bold\" \"pnpm:dev:db\" \"pnpm:dev:hooks\"",
    "dev:db": "./scripts/start.sh",
    "dev:hooks": "rollup -cw",
    "install:pocketbase": "./scripts/install.sh",
    "update:pocketbase": "./scripts/update.sh",
    "typegen:pocketbase": "pocketbase-typegen --db ./pb_data/data.db --out ./src/store.ts && eslint --no-ignore --fix ./src/store.ts && cp ./src/store.ts ../toolbox/src/interfaces/store.ts",
    "typegen:pocketbase:delayed": "sleep 1 && pnpm run typegen:pocketbase >>/dev/null &"
  },
