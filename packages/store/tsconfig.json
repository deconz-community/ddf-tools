{
    "compilerOptions": {
      "module": "ESNext",
      "target": "ESNext",
      "lib": [
        "ESNext"
      ],
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "isolatedModules": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "noUnusedLocals": true,
      "strictNullChecks": true,
      "allowJs": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": [
      "src/store.ts",
      "pb_data/types.d.ts",
      "src/**/*.ts",
      "src/**/*.d.ts"
    ],
    "exclude": [
      "dist",
      "node_modules"
    ]
  }