{
    "name": "@ddf-tools/validator",
    "version": "0.0.1",
    "description": "Validating DDF files for deconz",
    "keywords": [
        "deconz",
        "drezden",
        "conbee",
        "ddf",
        "bundle"
    ],
    "homepage": "https://github.com/deconz-community/ddf-tools/blob/main/packages/ddf-validator/",
    "bugs": {
        "url": "https://github.com/deconz-community/ddf-tools/issues/"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/deconz-community/ddf-tools.git"
    },
    "license": "MIT",
    "author": {
        "name": "Zehir",
        "email": "zehir@zorim.fr",
        "url": "https://github.com/Zehir"
    },
    "maintainers": [
        {
            "name": "Zehir",
            "email": "zehir@zorim.fr",
            "url": "https://github.com/Zehir"
        }
    ],
    "funding": {
        "type": "individual",
        "url": "https://github.com/sponsors/Zehir"
    },
    "files": [
        "./dist/"
    ],
    "main": "./dist/validator.cjs",
    "module": "./dist/validator.mjs",
    "exports": {
        ".": {
            "require": "./dist/validator.cjs",
            "import": "./dist/validator.mjs"
        }
    },
    "scripts": {
        "build": "vite build",
        "build:vite": "vite build",
        "build:dts": "dts-bundle-generator --config ./dts-bundle-generator.config.ts",
        "lint": "eslint",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:download-sample": "rimraf ./test-data && degit dresden-elektronik/deconz-rest-plugin ./test-data",
        "up": "taze major -I"
    },
    "devDependencies": {
        "@types/jsdom": "^20.0.1",
        "@types/node": "^18.13.0",
        "@types/pako": "^2.0.0",
        "@typescript-eslint/eslint-plugin": "^5.51.0",
        "@typescript-eslint/parser": "^5.51.0",
        "degit": "^2.8.4",
        "eslint": "^8.33.0",
        "eslint-config-prettier": "^8.6.0",
        "eslint-plugin-prettier": "^4.2.1",
        "glob": "^9.2.1",
        "lint-staged": "^13.1.1",
        "prettier": "^2.8.4",
        "rimraf": "^4.4.0",
        "stylelint": "^14.16.1",
        "stylelint-config-recommended": "^9.0.0",
        "stylelint-config-sass-guidelines": "^9.0.1",
        "taze": "^0.8.5",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.5",
        "vite": "^4.1.1",
        "vitest": "^0.28.4",
        "zod-validation-error": "^1.0.1"
    },
    "dependencies": {
        "zod": "^3.21.4"
    }
}