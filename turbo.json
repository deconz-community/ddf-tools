{
    "$schema": "https://turbo.build/schema.json",
    "pipeline": {
        "build:cleanup" :{},
        "build": {
            "dependsOn": [
                "build:cleanup",
                "^build"
            ],
            "outputs": [
                ".dist/**"
            ]
        },
        "test": {},
        "test:watch": {
            "cache": false
        },
        "lint": {},
        "deploy": {
            "dependsOn": [
                "build"
            ]
        }
    }
}